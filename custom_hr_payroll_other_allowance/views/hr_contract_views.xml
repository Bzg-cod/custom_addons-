<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_form_inherit_transportation" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.transportation</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <!-- Add transportation_allowance to the Monthly Advantages in Cash group -->
            <xpath expr="//group[@name='allowances']" position="inside">
                <label for="transportation_allowance"/>
                <div class="o_row">
                    <field name="transportation_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="position_allowance"/>
                <div class="o_row">
                    <field name="position_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="fuel_allowance"/>
                <div class="o_row">
                    <field name="fuel_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="dessert_allowance"/>
                <div class="o_row">
                    <field name="dessert_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="food_allowance"/>
                <div class="o_row">
                    <field name="food_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="deligation_allowance"/>
                <div class="o_row">
                    <field name="deligation_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="sefbox_allowance"/>
                <div class="o_row">
                    <field name="sefbox_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="house_allowance"/>
                <div class="o_row">
                    <field name="house_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="other_allowance"/>
                <div class="o_row">
                    <field name="other_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="busagon_ofa_allowance"/>
                <div class="o_row">
                    <field name="busagon_ofa_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="cost_sharing_allowance"/>
                <div class="o_row">
                    <field name="cost_sharing_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                 <label for="edir_allowance"/>
                <div class="o_row">
                    <field name="edir_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>